# Proxmox API Configuration
PROXMOX_HOST=192.168.1.150
PROXMOX_PORT=8006
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_password_here
PROXMOX_VERIFY_SSL=false

# Default Cluster Configuration
DEFAULT_NODE=your_node_name
DEFAULT_STORAGE=local-lvm
DEFAULT_NETWORK_BRIDGE=vmbr0

# Template Configuration (optional - update with your template VMIDs)
LINUX_TEMPLATE_VMID=9000
WINDOWS_TEMPLATE_VMID=9001

# VM ID Range
VMID_MIN=100
VMID_MAX=999999

# Validation Configuration
VALIDATION_TIMEOUT=300
VALIDATION_SSH_PORT=22
VALIDATION_RDP_PORT=3389
VALIDATION_MAX_RETRIES=10
VALIDATION_RETRY_INTERVAL=15

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3001

# Feature Flags
ENABLE_VM_DELETION=false
ENABLE_AUTO_START=true
REQUIRE_POST_VALIDATION=true
